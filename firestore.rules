// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write ONLY their own subcollections
    match /users/{uid}/{coll=**}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Public theory library (read-only to all)
    match /theory/{topicId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /carousels/{carouselId} {
      allow read: if true;
      allow write: if request.auth != null;

    match /items/{itemId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }

    // Popular music lookup collections (read-only, seeded via admin SDK)
    match /popularArtists/{docId} {
      allow read: if request.auth != null;
    }

    match /popularAlbums/{docId} {
      allow read: if request.auth != null;
    }

    match /popularSongs/{docId} {
      allow read: if request.auth != null;
    }
  }
}
